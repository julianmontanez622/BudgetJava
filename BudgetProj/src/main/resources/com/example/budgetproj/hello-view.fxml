<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.budgetproj.BudgetController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>
  <Text fx:id="textTop" strokeType="OUTSIDE" strokeWidth="0.0" text="Full Budget" />
  <TextField fx:id="budgetInfo" onAction="#onEnterButtonClick" promptText="\$" />
  <Button onAction="#onEnterButtonClick" text="Submit Budget" />

  <Text fx:id="budgetUsedText" strokeType="OUTSIDE" strokeWidth="0.0" text="Full Budget" />
  <TextField fx:id="budgetUsedInfo" onAction="#onEnterBudgetUsedButtonClick" promptText="\$" />
  <Button onAction="#onEnterBudgetUsedButtonClick" text="Submit Budget" />


  <TextField fx:id="costInput" promptText="Cost:" />
  <TextField fx:id="purchaseInput" promptText="Purchase: " />
  <Button text="Add" onAction="#handleAddCostAndPurchase" />

  <Label fx:id="leftoverBudget" />

</VBox>
